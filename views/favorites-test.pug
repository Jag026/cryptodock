extends layout.pug

block content
  h1 Favorite Cryptos List
  div(class='py-3')
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col')
        th(scope='col') Name
        th(scope='col') Symbol
        th(scope='col') Price
        th(scope='col') Market Cap
        th(scope='col') 24-hr Volume
        th(scope='col') 1-Day Change

    tbody
      each coin in arr 
             tr
               td
                img(src=`../public/crypto-icons/${coin.symbol.toLowerCase()}.svg` style={'width':'25px'})
               td= coin.name 
               td= coin.symbol 
               td= `$ ${coin.price}` 
               td= `$ ${coin.market_cap}` 
               td= `$ ${coin.volume_24h}` 
               td= ` ${coin.percent_change_24h}%`
