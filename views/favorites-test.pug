extends layout.pug

block content
  div(class='py-3')
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col')
        th(scope='col') Name
        th(scope='col') Symbol
        th(scope='col') Price
    tbody
      each coin in arr 
             tr
               td
                img(src=`../public/crypto-icons/${coin.symbol.toLowerCase()}.svg` style={'width':'25px'})
               td= coin.name 
               td= coin.symbol 
               td= coin.price
